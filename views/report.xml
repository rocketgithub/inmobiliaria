<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inmobiliaria.asistente_reporte_fha" model="ir.ui.view">
            <field name="name">inmobiliaria.asistente_reporte_fha</field>
            <field name="model">inmobiliaria.asistente_reporte_fha</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Ingrese datos a cotizar">
                    <group>
                        <group>
                            <!-- <field name="lead_id"/> -->
                            <field name="precio_venta"/>
                            <field name="enganche"/>
                            <field name="cantidad_cuotas_enganche"/>
                        </group>
                        <group>
                            <field name="tasa_interes_conjunta"/>
                            <field name="prima_contra_incendios"/>
                            <field name="relacion_cuota_ingreso_maxima"/>
                        </group>
                        <group>
                            <field name="tipo_escrituracion"/>
                            <field name="gasto_escrituracion"/>
                            <field name="otros"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Reporte" type="object" class="oe_highlight"/>
                        o
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="window_reporte_fha" model="ir.actions.act_window">
            <field name="name">Cotizacion FHA</field>
            <field name="res_model">inmobiliaria.asistente_reporte_fha</field>
            <field name="view_mode">form</field>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="target">new</field>
        </record>
        <record id="action_reporte_fha" model="ir.actions.report">
            <field name="name">inmobiliaria.reporte_fha</field>
            <field name="model">inmobiliaria.asistente_reporte_fha</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">inmobiliaria.reporte_fha</field>
            <field name="report_file">inmobiliaria.reporte_fha</field>
        </record>
        <menuitem action="window_reporte_fha" id="menu_asistente_reporte_fha" parent="crm.crm_menu_report"/>

    </data>
</odoo>
